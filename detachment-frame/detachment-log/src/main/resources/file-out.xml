<?xml version="1.0" encoding="UTF-8" ?>
<included>
    <property name="appName" value="${appName}"/>
    <appender name="infoAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/data/log/${appName}/info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/data/log/${appName}/info/info%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <Pattern>%-100.120(%date{HH:mm:ss.SSS} \t[${INSTANCE_ID},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}]\t
                %-25.50(%logger{15}:%L) [%-5.5level] ): %msg %n
            </Pattern>
        </encoder>
        <filter class="cn.detachment.frame.log.filter.LessThanOrEqualToFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="errorAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/data/log/${appName}/error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/data/log/${appName}/error/error%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <Pattern>%-100.120(%date{HH:mm:ss.SSS} \t[${INSTANCE_ID},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}]\t
                %-25.50(%logger{15}:%L) [%-5.5level] ): %msg %n
            </Pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <appender name="allAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/data/log/${appName}/all.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/data/log/${appName}/all/all%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <Pattern>%-100.120(%date{HH:mm:ss.SSS} \t[${INSTANCE_ID},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}]\t
                %-25.50(%logger{15}:%L) [%-5.5level] ): %msg %n
            </Pattern>
        </encoder>
        <filter class="cn.detachment.frame.log.filter.LessThanOrEqualToFilter">
            <level>ERROR</level>
        </filter>
    </appender>
    <root level="INFO">
        <appender-ref ref="infoAppender"/>
        <appender-ref ref="errorAppender"/>
        <appender-ref ref="allAppender"/>
    </root>
</included>